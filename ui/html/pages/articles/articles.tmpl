{{ define "title" }}Articles{{ end }}

{{- define "articles" -}}
  <div class="py-24 max-w-2xl">
    <h1 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl">
      Writing on software design, company building, and the aerospace industry.
    </h1>
    <div class="mt-6 space-y-7 text-base text-neutral-800">
      <p>
        All of my long-form thoughts on programming, leadership, product design,
        and more, collected in chronological order.
      </p>
    </div>
  </div>

  {{ template "article-list" . }}

  <div class="mb-24 lg:mb-40"></div>
{{ end }}

{{- define "main" -}}
  {{ template "articles" . }}
{{ end }}
